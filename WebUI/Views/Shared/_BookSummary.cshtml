@model Domain.Entities.Book

<div class="card mb-5 bg-light" style="max-width: 768px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="~/Content/Images/Troelson-books-1.jpg" width="180" alt="Изображение">
        </div>
        <div class="col-sm-10">
            <h3>
                <strong>@Model.Name</strong>
            </h3>
            <h4>
                <strong>@Model.Author</strong>
            </h4>
        </div>
        <div class="col-sm-2">
            <h4>
                <span id="price" class="badge bg-success">
                    @Model.Price.ToString("# руб")
                </span>
            </h4>
            @using (Html.BeginForm("AddToCart", "Cart"))
            {
                <div>
                    @Html.HiddenFor(x => x.BookId)
                    @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                    <input type="submit" class="btn btn-primary" value="В корзину"/>
                </div>
            }
        </div>
    </div>
    <span class="lead">@Model.Description</span>
</div>
<hr />